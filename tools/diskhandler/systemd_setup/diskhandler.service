[Unit]
Description=automatic disk mounter under /media with fstab
After=network.target

[Service]
ExecStart=/usr/bin/python -u diskhandler.py -sge -m
WorkingDirectory=/home/pi/rpitools/tools/diskhandler/bin
StandardOutput=inherit
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
