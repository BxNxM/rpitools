#!/bin/bash

export LC_ALL=C                 # fix: setlocale: No such file or directory
alias llt='ls -lrth'
alias ll='ls -lh'
alias servicelist='systemctl list-unit-files | grep enabled'
alias disk='df -h'
alias startvnc='sudo systemctl start vncserver-x11-serviced.service; systemctl status vncserver-x11-serviced.service'
alias rgbinterface='/home/$USER/rpitools/gpio/rgb_led/bin/rgb_interface.py'
alias oledinterface='/home/$USER/rpitools/gpio/oled_128x64/bin/oled_interface.py'
alias hapticinterface='/home/$USER/rpitools/gpio/haptic_engine/bin/hapticenginge_interface.py'
alias cpm='/home/$USER/rpitools/tools/cpmonitor/cprocess_monitor.bash'
alias cleanuplogs='pushd /home/$USER/rpitools/tools/ && ./clear_logs.sh && popd'
alias omxplayer_gui='/home/$USER/rpitools/tools/omxplayer_gui/omx_gui.py'
alias startxbg='startx &'
alias startconky='/home/$USER/rpitools/tools/set_conky/conky.bash'
alias weather_wttr='curl wttr.in/Budapest'
alias update_rpitools='cd ~/rpitools; is_needed=$(git fetch | wc -l); if [[ "$is_needed" -eq 0 ]] && [[ -z "$FORCEUPDATE" ]]; then echo "rpitools is up-to-date :D"; else /home/$USER/rpitools/tools/update_rpitools.bash stop && cd /home/$USER/ && sudo rm -rf /home/$USER/rpitools && git clone https://github.com/BxNxM/rpitools.git && cd /home/$USER/rpitools && source setup && source template/aliases && /home/$USER/rpitools/tools/update_rpitools.bash start; fi'
alias mysshfs='/home/$USER/rpitools/tools/sshfs.bash'
alias confighandler='/home/$USER/rpitools/autodeployment/bin/ConfigHandlerInterface.py'
alias confhelper='/home/$USER/rpitools/autodeployment/config/helper.bash'
alias cd..='cd ..'
alias i2cdetect='i2cdetect -y 1'
alias save_repo_confs='/home/$USER/rpitools/tools/cache_restore_backup.bash backup'
alias diskhandler='sudo /home/$USER/rpitools/tools/diskhandler/bin/diskhandler.py'
alias kodibg='kodi &'
alias sysmonitor='/home/$USER/rpitools/tools/sysmonitor/bin/sysmonitor.py'
alias remove_app='sudo apt-get autoremove --purge'
alias list_services='echo -e "\nENABLED:\n\n$(systemctl list-unit-files | grep enabled)\n\nINACTIVE:\n\n$(systemctl list-unit-files | grep disabled)"'
alias halpage='/home/$USER/rpitools/tools/dropbox_halpage/lib/server_info_getter.bash'
alias copy_my_sshkey_to='/home/$USER/rpitools/tools/copy_my_sshkey_to.bash'
alias clientMemDict='/home/$USER/rpitools/tools/socketmem/lib/clientMemDict.py'
alias camera='/home/$USER/rpitools/gpio/camera/bin/camera_interface.bash'

alias gitlog='git log --all --decorate --oneline --graph'
alias gitbranch='git branch -av'

if [ ! -z "$REPOROOT" ]
then
    alias doc='cat ${REPOROOT}/template/help.dat'
fi
